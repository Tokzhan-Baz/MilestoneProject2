@model IEnumerable<MilestoneProject2.Models.Identity.UserEntity>
@{
    ViewBag.Title = "List of users";
}

<a asp-action="Create">Create</a>

<table class="table">
    <tr>
        <th>Email</th>
        <th>name</th>
        <th>Surname</th>
        <th>Phone</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Name</td>
            <td>@user.SurName</td>
            <td>@user.PhoneNumber</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change Password</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>